#!/bin/bash

# the process number (or numbers) of currently-running sessions of record_video_test_001.py
PROCNUM=`ps uax | grep -v grep | grep record_video_test_001.py | tr -s " " | cut -d " " -f 2`

# this sends a SIGINT (equal to Ctrl-C) to record_video_test_001.py
echo stopvideo: sending SIGINT to process $PROCNUM
kill -2 $PROCNUM